<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/list_item_margin"
    android:layout_margin="@dimen/list_item_margin">

    <ImageView
        android:id="@+id/imageView_plant_pic"
        android:layout_width="@dimen/list_plant_pic_size"
        android:layout_height="@dimen/list_plant_pic_size"
        android:contentDescription="@string/plant_picture_contentDescription"
        app:layout_constraintEnd_toStartOf="@+id/textView_plant_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_plant_name_text_size"
        android:layout_marginStart="@dimen/list_plant_description_margin"
        android:layout_marginLeft="@dimen/list_plant_description_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_plant_pic" />

    <TextView
        android:id="@+id/textView_plant_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_plant_type_text_size"
        android:layout_marginStart="@dimen/list_plant_description_margin"
        android:layout_marginLeft="@dimen/list_plant_description_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_plant_name" />

    <ImageView
        android:id="@+id/imageView_water_button"
        android:layout_width="@dimen/list_water_button_size"
        android:layout_height="@dimen/list_water_button_size"
        android:src="@drawable/ic_water_blue"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/textView_plant_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
